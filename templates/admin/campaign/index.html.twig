{% extends 'base.html.twig' %}

{% block title %} Campaigns {% endblock %}

{% block breadcrumbs %}
    {{ parent() }}
    <li>
      <a href="{{ path('admin_dashboard') }}">
        Admin
      </a>
    </li>
    <li>
     Campaigns
    </li>
{% endblock breadcrumbs %}

{% block body %}
    <h3>Campaigns </h3>

     <hr>

    <table class="table table-striped ">
        <thead>
            <tr>
                <th colspan="2">Campaign</th>
                <th>Start At</th>
                <th>End At</th>
            </tr>
        </thead>
        <tbody>
        {% for campaign in campaigns %}
            <tr>
                <td style="width: 64px;">
                    <a href="{{ path('admin_campaign_view', {'id': campaign.id}) }}">
                        <img style="width: 64px; object-fit: cover; height: auto;" src="{{ campaign.imageUrl }}" />
                    </a>
                </td>
                <td>
                    <a href="{{ path('admin_campaign_view', {'id': campaign.id}) }}">
                        {{ campaign.name }}
                    </a>
                </td>
                <td>
                    {% if campaign.startAt %} {{ campaign.startAt|date() }} {% endif %}
                </td>
                <td>
                    {% if campaign.endAt %} {{ campaign.endAt|date() }} {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="buttonbox" >
            <a href="{{ path('admin_campaign_add') }}" class="btn btn-primary">
                <i class="fa fa-plus" aria-hidden="true"></i>
                Add
            </a>
    </div>
{% endblock %}