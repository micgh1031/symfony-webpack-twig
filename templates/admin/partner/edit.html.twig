{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% block title %} {% if partner.id %} Edit {% else %} Add {% endif %}  Partner{% endblock %}

{% block breadcrumbs %}
    {{ parent() }}
    <li>
      <a  href="{{ path('admin_dashboard') }}">
        Admin
      </a>
    </li>
    <li>
      <a  href="{{ path('admin_partner_index') }}">
      Partners
      </a>
    </li>
    <li>
       {% if partner.id %} Edit  /  #{{partner.id}}{% else %} Add {% endif %}
    </li>
{% endblock breadcrumbs %}

{% block body %}
    <h3>{% if partner.id %} Edit {% else %} Add {% endif %} Partner</h3>

     <hr>

    {{ form_start(form) }}
        {{ form_widget(form) }}

        <div class="buttonbox" >
                <button class="btn btn-primary">{{ button_label|default('Save') }}</button>
                <a href="{{ path('admin_partner_index') }}" class="btn btn-primary" ><li class="fa fa-arrow-left"></li> Back</a>
            </div>
    {{ form_end(form) }}
{% endblock %}


{% block scripts_custom %}
    <script src="{{ asset('js/to-markdown.js') }}"></script>
    <script src="{{ asset('js/markdown.js') }}"></script>

    <script type="text/javascript" >
        document.addEventListener('DOMContentLoaded', function() {
            $('#partner_description').markdown();
        });
    </script>
{% endblock %}