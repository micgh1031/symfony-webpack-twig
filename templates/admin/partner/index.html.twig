{% extends 'base.html.twig' %}

{% block title %} Partners {% endblock %}

{% block breadcrumbs %}
    {{ parent() }}
    <li>
      <a  href="{{ path('admin_dashboard') }}">
        Admin
      </a>
    </li>
    <li>
      Partners
    </li>
{% endblock breadcrumbs %}

{% block body %}

    <h3>Partners </h3>

     <hr>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Partner</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
        {% for partner in partners %}
            <tr>
                <td>
                    <a href="{{ path('admin_partner_edit', {'id': partner.id}) }}">
                        {{ partner.displayName }}
                    </a>
                </td>
                <td>{{ partner.status }}</td>

            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="buttonbox" >
            <a href="{{ path('admin_partner_add') }}" class="btn btn-primary">
                <i class="fa fa-plus" aria-hidden="true"></i>
                Add
            </a>
    </div>
{% endblock %}