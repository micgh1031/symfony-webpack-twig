{% extends '../../base.html.twig' %}

{% block title %}Categories{% endblock %}

{% block breadcrumbs %}
    {{ parent() }}
    <li>
      <a href="{{ path('admin_dashboard') }}">
        Admin
      </a>
    </li>
    <li>
     Categories
    </li>
{% endblock breadcrumbs %}

{% block body %}
    <h3>Categories </h3>

    <hr>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Uri</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>
                    <a href="{{ path('admin_category_view', {'id': category.id}) }}">
                        {{ category.id }}
                    </a>
                </td>
                <td>{{ category.name }}</td>
                <td>{{ category.uri }}</td>
                <td>{{ category.description }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="buttonbox" >
        <a href="{{ path('admin_category_add') }}" class="btn btn-primary">
            <i class="fa fa-plus" aria-hidden="true"></i>
            Add
        </a>
    </div>
{% endblock %}
