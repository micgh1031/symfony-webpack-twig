{% extends '../base.html.twig' %}

{% block title %}Campaign{% endblock %}

{% block body %}
    <h1>Campaign</h1>

    <table class="table">
            <tbody>
                <tr>
                    <th width="20%" >Xuid</th>
                    <td>{{ campaign.xuid }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ campaign.name }}</td>
                </tr>
                <tr>
                    <th>Image Url</th>
                    <td>{{ campaign.imageUrl }}</td>
                </tr>
                <tr>
                    <th>Start At</th>
                    <td>
                        {% if campaign.startAt %} {{ campaign.startAt|date('Y:m:d H:i') }} {% endif %}
                    </td>
                </tr>
                <tr>
                    <th>End At</th>
                    <td>
                        {% if campaign.endAt %} {{ campaign.endAt|date('Y:m:d H:i') }} {% endif %}
                    </td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td class="well" >{{ campaign.description|nl2br }}</td>
                </tr>
            </tbody>
        </table>

    <img src="{{path('campaign_qrcode',{'campaignXuid': campaign.xuid })}}" />
{% endblock %}